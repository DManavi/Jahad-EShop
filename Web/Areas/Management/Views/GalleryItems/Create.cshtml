@model Web.Models.GalleryItem

@{
    ViewBag.Title = "گالری - ایجاد آیتم";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<h2>ایجاد آیتم</h2>

@using (Html.BeginForm("Create", "GalleryItems", new { id = ViewBag.CategoryId }, FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>آیتم</h4>
        <hr />
        @Html.ValidationSummary(Request.HttpMethod == "GET", "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">فایل تصویر</label>
            <div class="col-md-10">
                <input type="file" name="img" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ایجاد" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("انصراف", "Index", new { id = ViewBag.CategoryId })
</div>
